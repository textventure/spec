{
  "version": "0.0.0",
  "scripts": {
    "release": "standard-version",
    "release:dry-run": "npm run release -- --dry-run"
  },
  "standard-version": {
    "scripts": {
      "postbump": "sed -i '' 's/`.*`/`'$(node -p \"require('./package').version\")'`/; s/(.*)/('$(date +%F)')/' VERSION.md"
    }
  },
  "devDependencies": {
    "standard-version": "4.4.0"
  }
}
